.v3-7-h-otherbtn {
    padding: 0.3rem 0.05rem;
}
body{
  background-color: gray;
}
.v3-7-h-otherbtn .ui_flex {
    height: 100%;
    padding: 0 0.5rem;
    margin-bottom: 0.25rem; 
}
.v3-7-h-otherbtn>.ui_flex>.ui_flex-hd {
    width: 4rem;
    height: 4rem;
    background: #fff;
    border-radius: 4px;
    margin-top: 0.266666rem;
    padding: 0 0.26rem;
    display: block;
    color: inherit;
}
.ui_flex-hd {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    min-width: 0;
}
.v3-7-h-otherbtn .ui_flex {
    height: 100%;
}
.ui_flex {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}
.v3-7-h-otherbtn .iconpic {
    width: 2.5rem;
    height: 2.5rem;
    margin-right: 0.5rem;
}

.v3-7-h-otherbtn .h2 {
    font-size: 14px;
    margin: 0 0 0rem;
    line-height: 1.6;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bold;
}
.v3-7-h-otherbtn .p {
    font-size: 12px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #b2b2b2;
}
image {
    width: 100%;
    height: 100%;
}
.tuijian_item .type_title {
    height: 1.8rem;
    line-height: 1.8rem;
    overflow: hidden;
    font-size: 14px;
    color: inherit;
    padding: 0 1rem;
    border-bottom: 1px solid #eee;
    position: relative;
}
.tuijian_list {
    padding: 0.5rem 1rem;
    position: relative;
    display: block;
    background: #fff;
    overflow: hidden;
}
.tuijian_item .type_title a {
    float: right;
    color: #b2b2b2;
    font-size: 12px;
}
.tuijian_list .ui_flex-hd {
    position: relative;
}
.tuijian_list .title {
    font-size: 14px;
    width: auto;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-bottom: 0.38rem; 
}
.tuijian_list .info {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 12px;
    color: #b2b2b2;
    line-height: 1.2rem;
}
.tuijian_list .v3-7-info {
    margin-top: 0.38rem;
}
.tuijian_list .v3-7-info .tags {
    margin-top: 0;
}
.tuijian_list .tags {
    line-height: 20px;
    color: #c4c8ce;
}
.tuijian_list .tags span {
    height: 20px;
    text-align: center;
    color: #fd7323;
    border: 1px solid #fd7323;
    padding: 0 8px;
    border-radius: 2px;
    display: inline-block;
    margin-right: 10px;
    font-size: 12px;
    line-height: 18px;
}
#last_case .tuijian_list .v3-7-info .time {
    float: right;
}
.tuijian_list .v3-7-info .time {
    font-size: 12px;
    color: #b2b2b2;
}
.tuijian_list+.tuijian_list:after {
    position: absolute;
    right: 0;
    top: 0;
    left: 1rem;
    height: 1px;
    content: '';
    background-color: #eeeeee;
}
.v3-7-h-otherbtn + .tuijian_item{
   margin-top: 0;
    background: #fff;
}
.tuijian_item {
    margin-top: 0.5rem;
    background: #fff;
}
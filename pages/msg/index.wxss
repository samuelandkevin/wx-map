.badge {
    display: inline-block;
    width: auto;
    text-align: center;
    min-width: 20px;
    height: 20px;
    line-height: 20px;
    padding: 0;
    font-size: 9px;
    color: #ffffff;
    background-color: #ff2600;
    border-radius: 10px;
    position: absolute;
    top: 3px;
    left: 63%;
    z-index: 99;
}
.list .list-item-media img {
    width: 100%;
    display: block;
}
.list .wechat-avatar {
    width: 3rem;
}
.list .list-item-media {
    position: relative;
    padding: 0.5rem 0;
    padding-right: 0.75rem;
    display: inherit;
    flex-shrink: 0;
    flex-wrap: nowrap;
    -webkit-box-align: center;
    align-items: flex-start;
}
 
.media-list-item-inner {
    box-sizing: border-box;
    display: flex;
}
.media-list .list-item {
    display: block;
}
.list .list-item {
    list-style: none;
    margin: 0;
    padding: 0;
    padding-left: 0.75rem;
    color: #212121;
    background-color: #ffffff;
    position: relative;
    min-height: 2.2rem;
    box-sizing: border-box;
    -webkit-box-pack: justify;
    justify-content: space-between;
}
.list {
    padding: 0;
    margin: 0;
    position: relative;
    font-size: 0.8rem;
}
ul, li {
    list-style: none;
}
.wechat-avatar .row-padded {
    background-color: #dddee0;
    padding: 0.05rem;
    margin-left: -0.05rem;
    margin-right: -0.05rem;
    width:100%;
    height:100%;
}
.wechat-avatar .row-padded [class*=col-xs-] {
    padding: 0.05rem;
}
.col-xs-6 {
    width: 45%;
    height:45%;
}
.col-xs-4 {
    width: 30%;
    height:30%;
}
.col-xs-1, .col-xs-2, .col-xs-3, .col-xs-4, .col-xs-5, .col-xs-6, .col-xs-7, .col-xs-8, .col-xs-9, .col-xs-10, .col-xs-11, .col-xs-5 {
    position: relative;
    float: left;
}
.list .list-item-title {
    font-size: 14px;
    position: relative;
    max-width: 100%;
    color: #212121;
}
.list .list-item-right, .list-item-title-row em {
    max-width: 50%;
    position: relative;
    font-size: 12px;
    color: #757575;
    margin-left: 10px;
}
.list .list-item-text {
    font-size: 0.7rem;
    color: #757575;
    position: relative;
    box-sizing: border-box;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    align-items: center;
}
.font-size-12 {
    font-size: 0.6rem !important;
}
.list .list-item-inner p {
    overflow: hidden;
}
.ellipsis-1 {
    display: -webkit-box;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
p {
    -webkit-margin-before: 1em;
    -webkit-margin-after: 1em;
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;
}
.media-list .list-item-inner {
    display: block;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
}
.list .list-item-inner {
    position: relative;
    min-height: 2.2rem;
    padding-right: 0.25rem;
    width: 100%;
    box-sizing: border-box;
    -webkit-box-flex: 1;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}
.list .list-item-media image {
    width: 100%;
    display: block;
    height: 100%;
}
.wechat-avatar .row-padded [class*=col-xs-] {
    padding: 0.05rem;
}
.list .list-item:after {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #c8c7cc;
}
